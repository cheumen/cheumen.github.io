<script type="text/javascript">
function checkForm(form) {
    if (form.contact_name.value || form.contact_email.value || form.contact_message.value) {
      $.post(form.action, $(form).serialize(), function (msg) {
          $('input.btn-submit').attr('disabled', true);
          $('input.btn-submit').attr('value', '提交成功');
          $('input.btn-submit').css('background', '#ccc');
      });
    }
    return false;
}
</script>

